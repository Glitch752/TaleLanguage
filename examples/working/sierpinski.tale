let n = 64;

let y = n - 1;
while(y >= 0) {
    let i = 0;
    while(i < y) {
        print(" ");
        i = i + 1;
    }

    let x = 0;
    while(x + y < n) {
        if ((x & y) != 0) 
            print("  "); 
        else
            print("* "); 

        x = x + 1;
    } 

    print("\n");

    y = y - 1;
} 